{
  "name": "arilyccontroller",
  "version": "1.0.0",
  "main": "src/app.ts",
  "scripts": {
    "copy-files": "npx ncp src/static dist/static && npx ncp src/views dist/views && npx ncp src/db/migrations dist/db/migrations",
    "cleanup": "rimraf dist",
    "prebuild": "npm run cleanup",
    "build": "npx tsc && npm run copy-files",
    "serve": "tsx watch --env-file=./.env src/app.ts",
    "prestart": "npm run build",
    "start": "NODE_ENV=production node dist/app.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/J1mooo/arilyccontroller.git"
  },
  "keywords": [
    "arilyc",
    "controller",
    "opensoure"
  ],
  "author": "STAFi",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/J1mooo/arilyccontroller/issues"
  },
  "homepage": "https://github.com/J1mooo/arilyccontroller#readme",
  "description": "",
  "dependencies": {
    "ejs": "^3.1.10",
    "express": "^5.1.0"
  },
  "devDependencies": {
    "ncp": "^2.0.0",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  }
}
